# Alternative Chart.yaml using CloudNativePG instead of Bitnami
apiVersion: v2
name: klask
description: A Helm chart for Klask - Modern code search engine
type: application
version: 0.1.0
appVersion: "0.1.0"
home: https://github.com/klask-io/klask
sources:
  - https://github.com/klask-io/klask
maintainers:
  - name: Klask Team
keywords:
  - search
  - code
  - rust
  - react

# Alternative: CloudNativePG (more cloud-native)
dependencies:
  - name: cloudnative-pg
    version: "~0.20.0"
    repository: "https://cloudnative-pg.github.io/charts"
    condition: postgresql.enabled
    alias: postgresql
